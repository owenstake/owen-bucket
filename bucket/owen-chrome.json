    "persist": "User Data",
    "post_install" : [
        "# persist dir is created after installer",
        "Remove-Item -Force -Recurse -ErrorAction SilentlyContinue      `",
        "       -Path \"$ENV:LOCALAPPDATA\\Google\\Chrome\\User Data\"",
        "New-Item -ItemType Junction -target \"$dir\\User Data\"        `",
        "       -Path \"$ENV:LOCALAPPDATA\\Google\\Chrome\\User Data\" | Out-Null "
    ],
    "uninstaller": {
        "script": [
            "Remove-Item -Force -Recurse -ErrorAction SilentlyContinue      `",
            "          -Path \"$ENV:LOCALAPPDATA\\Google\\Chrome\\User Data\""
        ]
    },
